= simple_form_for @user, html: {novalidate: false, class: "form-inline"} do |f|
	= f.input :email, as: :email, label: false, placeholder: "Enter Email", input_html: {required: true }
	.control-group
		= f.label :known, class: 'control-label'
	.controls
		= collection_select( :user, :refprovider_id, Refprovider.all, :id, :name, {}, { :multiple => false } )
	.form-group.submit
		= f.button :submit, "KNOW MORE", class: "btn btn-branded"
